<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context="com.cb.android.qrcode.SharingActivity">


    <TextView
        android:id="@+id/tv_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_marginTop="26dp"
        android:text="Select Your Files"
        android:textColor="#FFDAB9"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/fileSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textColor="@android:color/black"
        android:text="Browse"
        android:alpha=".65"
        android:textSize="16sp"
        android:layout_below="@+id/tv_files"
        android:layout_alignLeft="@+id/tv_files"
        android:layout_alignStart="@+id/tv_files" />

    <Button
        android:id="@+id/bv_genFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.65"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="Generate"
        android:layout_alignBaseline="@+id/fileSelect"
        android:layout_alignBottom="@+id/fileSelect"
        android:layout_alignRight="@+id/tv_files"
        android:layout_alignEnd="@+id/tv_files" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:paddingTop="10dp"
        android:id="@+id/rvFiles"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="TYPE"
        android:textColor="#FFDAB9"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/fileSelect"
        android:layout_alignStart="@+id/fileSelect" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="#FFDAB9"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/bv_genFiles"
        android:layout_alignStart="@+id/bv_genFiles" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_red_dark"
        android:layout_above="@id/rvFiles"
        android:id="@+id/textView5" />

</RelativeLayout>
